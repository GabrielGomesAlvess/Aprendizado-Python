nota1 = eval(input("Informe a sua nota do 1° semestre: "))
nota2 = eval(input("Informe a sua nota do 2° semestre: "))

media = (nota1 + nota2) /2  

if media < 4:
  conceito = "E"
 
elif media < 6:
  conceito = "D"
  
elif media < 7.5:
  conceito = "C"
  
elif media < 9:
  conceito = "B"
  
elif media < 10:
  conceito = "A"
  
if conceito == "A" or "B" or "C":
  resultado = "Aprovado!"
 
elif conceito == "D" or "E":
  resultado = "Reprovado!"
  
  
print("As suas notas sao", nota1, "e", nota2)
print("A sua media é", media)
print("O seu conceito é", conceito)
print(resultado)

