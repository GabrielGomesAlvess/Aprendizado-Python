n1 = int(input("Informe o primeiro preço "))

n2 = int(input("Informe o segundo preço "))

n3 = int(input("Informe o terceiro preço "))

menor = 0

if n1 < n2 and n1 < n3 :

    menor =  n1

elif n2 < n1 and n2 < n3: 

    menor = n2

elif n3 < n1 and n3 < n2:

    menor = n3

print("A melhor opção custa R$", menor)
